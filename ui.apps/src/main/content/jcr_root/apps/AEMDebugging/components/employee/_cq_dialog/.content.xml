<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Properties"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <employeeimage
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                        allowUpload="false"
                        autoStart="{Boolean}false"
                        class="cq-droptarget"
                        fieldLabel="Employee Image"
                        fileNameParameter="./fileName"
                        fileReferenceParameter="./fileReference"
                        mimeTypes="[image/.*]"
                        name="./file"/>
                    <employeeid
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                        fieldLabel="Employee Id"
                        name="./employeeId"/>
                    <employeename
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Employee Name"
                        name="./employeeName"/>
                    <employeegender
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                        fieldLabel="Employee Gender"
                        name="./gender">
                        <items jcr:primaryType="nt:unstructured">
                            <male
                                jcr:primaryType="nt:unstructured"
                                text="Male"
                                value="Male"/>
                            <female
                                jcr:primaryType="nt:unstructured"
                                text="Female"
                                value="Female"/>
                        </items>
                    </employeegender>
                    <employeecontact
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                        fieldLabel="Employee Phone Number"
                        name="./phoneNumber"/>
                    <employeedesignation
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                        fieldLabel="Employee Designation"
                        name="./employeeDesignation">
                        <items jcr:primaryType="nt:unstructured">
                            <jrdeveloper
                                jcr:primaryType="nt:unstructured"
                                text="Junior Developer"
                                value="Junior Developer"/>
                            <srdeveloper
                                jcr:primaryType="nt:unstructured"
                                text="Senior Developer"
                                value="Senior Developer"/>
                            <manager
                                jcr:primaryType="nt:unstructured"
                                text="Manager"
                                value="Manager"/>
                        </items>
                    </employeedesignation>
                    <employeedoj
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                        fieldLabel="Employee Date of Joining"
                        name="./employeedoj"/>
                    <employeeexp
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/switch"
                        fieldLabel="Is Employee Experienced?"
                        name="./isExperienced"/>
                    <employeedatapath
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                        fieldLabel="Employee Data Path"
                        name="./employeedata"
                        rootPath="/content"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
